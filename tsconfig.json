{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "es6", "es2017"],
    "module": "es2015",
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "types": ["react/next", "react-dom/next"]
  }
}
